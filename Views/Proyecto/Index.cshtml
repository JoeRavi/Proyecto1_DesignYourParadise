@model IEnumerable<Proyecto1_EstebanRavazoli.Models.Proyecto>

@{
    ViewData["Title"] = "Index";
}

<h1>Proyectos</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdProyecto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdCliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.MetrosConstruccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CostoPorMetroCuadrado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdProyecto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdCliente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.MetrosConstruccion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CostoPorMetroCuadrado)
                </td>
                <td>
                    @Html.ActionLink("Detalle", "Details", new { id = item.IdProyecto })
                </td>
            </tr>
        }
    </tbody>
</table>
